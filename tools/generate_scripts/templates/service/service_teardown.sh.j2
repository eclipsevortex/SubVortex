#!/bin/bash

set -euo pipefail

SERVICE_NAME={{ name }}
PROJECT_WORKING_DIR="${SUBVORTEX_WORKING_DIR:-}"

# --- Basic Checks ---
if [[ "$EUID" -ne 0 ]]; then
  echo "ğŸ›‘ Must be run as root. Re-running with sudo..."
  exec sudo "$0" "$@"
fi

echo "ğŸ§¹ Starting $SERVICE_NAME teardown..."

# Fallback to script location if PROJECT_WORKING_DIR is not set
if [[ -z "$PROJECT_WORKING_DIR" ]]; then
  SCRIPT_PATH="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
  PROJECT_WORKING_DIR="$(realpath "$SCRIPT_PATH/../../../../../")"
  echo "ğŸ“ PROJECT_WORKING_DIR not set â€” using fallback: $PROJECT_WORKING_DIR"
else
  echo "ğŸ“ Using PROJECT_WORKING_DIR from environment: $PROJECT_WORKING_DIR"
fi

SERVICE_WORKING_DIR="$PROJECT_WORKING_DIR/subvortex/{{ neuron }}/{{ component }}"
SERVICE_LOG_DIR="/var/log/subvortex-{{ neuron }}"
SERVICE_LOG_PREFIX="subvortex-{{ neuron }}-{{ component }}"

# Remove the service
echo "ğŸ” Checking $SERVICE_NAME..."
if [[ -f "$SERVICE_FILE" ]]; then
    echo "ğŸš« Disabling systemd service: $SERVICE_NAME..."
    systemctl disable "${SERVICE_NAME}.service" || true
    
    echo "ğŸ§¹ Removing systemd service file..."
    rm -f "/etc/systemd/system/${SERVICE_NAME}.service"

    echo "ğŸ”„ Reloading systemd daemon..."
    systemctl daemon-reload
    systemctl reset-failed
else
    echo "â„¹ï¸ $SERVICE_NAME is not running. No action needed."
fi

# Remove the service logs
echo "ğŸ” Cleaning logs for $SERVICE_NAME..."
if [[ -d "$SERVICE_LOG_DIR" ]]; then
    deleted_any=false
    shopt -s nullglob
    for file in "$SERVICE_LOG_DIR"/${SERVICE_LOG_PREFIX}*.log; do
        echo "ğŸ§¹ Removing log file: $file"
        rm -f "$file"
        deleted_any=true
    done
    shopt -u nullglob

    if [[ "$deleted_any" = true ]]; then
        # Check if the directory is now empty
        if [[ -z "$(ls -A "$SERVICE_LOG_DIR")" ]]; then
            echo "ğŸ—‘ï¸  No logs left â€” removing empty directory: $SERVICE_LOG_DIR"
            rmdir "$SERVICE_LOG_DIR"
        else
            echo "ğŸ“ Some logs remain in $SERVICE_LOG_DIR â€” directory not removed."
        fi
    else
        echo "â„¹ï¸ No log files found for prefix: $SERVICE_LOG_PREFIX"
    fi
else
    echo "â„¹ï¸ Log directory $SERVICE_LOG_DIR does not exist. Skipping."
fi

{% if type == 'python' %}
# --- Python virtualenv cleanup ---
# Set the venv dir
VENV_DIR="$SERVICE_WORKING_DIR/venv"

echo "ğŸ” Checking for virtual environment..."
if [[ -d "$VENV_DIR" ]]; then
    echo "ğŸ§¹ Removing virtual environment..."
    rm -rf "$VENV_DIR"
else
    echo "â„¹ï¸ Virtual environment not found. Skipping removal."
fi

{% elif type == 'package' %}
# --- Package service cleanup ---
echo "ğŸ“¦ Removing package '{{ package_name }}'..."

if command -v apt-get &> /dev/null; then
    sudo apt-get purge -y {{ package_name }}
    sudo apt-get autoremove -y
elif command -v dnf &> /dev/null; then
    sudo dnf remove -y {{ package_name }}
elif command -v pacman &> /dev/null; then
    sudo pacman -Rns --noconfirm {{ package_name }}
else
    echo "âš ï¸ Unsupported package manager. Please uninstall {{ package_name }} manually."
fi

{% elif type == 'binary' %}
# --- Binary cleanup from /usr/local/bin ---
echo "ğŸ” Checking binary /usr/local/bin/{{ binary_name }}..."
if [[ -f "/usr/local/bin/{{ binary_name }}" ]]; then
    echo "ğŸ—‘ï¸ Removing binary {{ binary_name }} from /usr/local/bin"
    sudo rm -f "/usr/local/bin/{{ binary_name }}"
else
    echo "â„¹ï¸ Binary {{ binary_name }} not found in /usr/local/bin. Skipping."
fi

{% elif type == 'system' %}
# --- System-managed service: no teardown needed ---
echo "âš™ï¸ System-managed service: nothing to clean up."

{% else %}
echo "âŒ Unknown service type '{{ type }}'. Cannot determine cleanup actions."
exit 1
{% endif %}

echo "âœ… $SERVICE_NAME uninstalled successfully."